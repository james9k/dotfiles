#!/bin/bash


git_commands () {
    git checkout master
    git pull origin master
    git submodule init
    git submodule update --recursive
}

cd ~/.dotfiles
pwd
git_commands

cd ~/.dotfiles/vim/vim.symlink/bundle
pwd

for bundle in "MatchTag" "jedi-vim" "salt-vim" "syntastic" "vim-sensible" "vim-surround" "vim-terraform"
do
    echo ""
    cd ${bundle}
    pwd
    git_commands
    cd ..
done

