#!/bin/bash

git_commands () {
    git checkout master
    git pull origin master
    git submodule update --init --recursive
}

pushd ~/.dotfiles
git_commands

REPOS=$(cat <<EOF
groovyindent-unix
Jenkinsfile-vim-syntax
MatchTag
nerdtree
salt-vim
syntastic
tabnine-vim
vim-colors-solarized
vim-sensible
vim-surround
vim-terraform
EOF
)

pushd ~/.dotfiles/vim/vim.symlink/bundle
for bundle in ${REPOS}
do
    echo ""
    cd ${bundle}
    pwd
    git_commands
    cd ..
done
