#!/usr/bin/env bash

DATE="$(date "+%Y-%m-%d")"
YEAR="$(date "+%Y")"
MONTH="$(date "+%m")"
NOTEDIR="${HOME}/notepad/${YEAR}/${MONTH}"
FILENAME="${NOTEDIR}/${DATE}.txt"

mkdir -p "${NOTEDIR}"
touch "${FILENAME}"

if [ "$(uname)" = "Darwin" ]; then
    mvim "${FILENAME}"
else
    gvim "${FILENAME}"
fi
