#!/usr/bin/env bash
# SQL scratchpad

DATE="$(date "+%Y-%m-%d")"
YEAR="$(date "+%Y")"
MONTH="$(date "+%m")"
NOTEDIR="${HOME}/notepad/${YEAR}/${MONTH}"
FILENAME="${NOTEDIR}/${DATE}.sql"

mkdir -p "${NOTEDIR}"
touch "${FILENAME}"

if [ "$(uname)" = "Darwin" ]; then
    mvim "${FILENAME}"
else
    neovide "${FILENAME}"
    #gvim "${FILENAME}"
fi
