#!/usr/bin/env bash

BOLD='\033[1m'
NC='\033[m'

printf "%bVietnam%b:   %s\n" "${BOLD}" "${NC}" "$(TZ="Asia/Ho_Chi_Minh" date)"
printf "%bAEST%b:      %s\n" "${BOLD}" "${NC}" "$(TZ="Australia/Brisbane" date)"
printf "%bMelbourne%b: %s\n" "${BOLD}" "${NC}" "$(TZ="Australia/Melbourne" date)"
printf "%bUTC%b:       %s\n" "${BOLD}" "${NC}" "$(TZ=UTC date)"
