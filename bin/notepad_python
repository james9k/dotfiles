#!/usr/bin/env bash
# Python script scratchpad

DATE="$(date "+%Y-%m-%d")"
YEAR="$(date "+%Y")"
MONTH="$(date "+%m")"
NOTEDIR="${HOME}/notepad/${YEAR}/${MONTH}"
FILENAME="${NOTEDIR}/${DATE}.py"

mkdir -p "${NOTEDIR}"

if [ ! -e "${FILENAME}" ]; then
    echo "Creating script ${FILENAME}"
    cat << EOF > "${FILENAME}"
# Date: ${DATE}
# Notes: ${FILENAME}

def main():
    pass

if __name__ == "__main__":
    main()
EOF
fi

if [ "$(uname)" = "Darwin" ]; then
    mvim "${FILENAME}"
else
    neovide "${FILENAME}"
    #gvim "${FILENAME}"
fi
