" Set a decent font
if has("gui_macvim")
    " OSX
    set guifont=Menlo:h13,Source\ Code\ Pro:h12,Hack:h13
elseif has("gui_gtk2") || has("gui_gtk3")
    " Set Copy,Cut and Paste shortcut keys
    " paste will first go into visual mode
    vmap <C-c> "+yi
    vmap <C-x> "+c
    vmap <C-v> c<ESC>"+p
    imap <C-v> <C-r><C-o>+
    " Try to set preferred fonts
    let scp=system('fc-list | grep -c Source\ Code\ Pro')
    let hack=system('fc-list | grep -c Hack')
    let incon=system('fc-list | grep -c Inconsolata')
    let dsm=system('fc-list | grep -c DejaVu\ Sans\ Mono')
    if ( dsm > 0 )
        set guifont=DejaVu\ Sans\ Mono\ 11
    elseif ( scp > 0 )
        set guifont=Source\ Code\ Pro\ 11
    elseif ( hack > 0 )
        set guifont=Hack\ 11
    endif

endif

set lines=40 columns=86

set background=dark
colorscheme solarized
